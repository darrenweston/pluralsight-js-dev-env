# editorconfig.org

# VS Code needs a plugin to make use of this file.
# Type the following into command pallete to install:
# ext install EditorConfig

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
